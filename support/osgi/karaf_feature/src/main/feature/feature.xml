<?xml version="1.0" encoding="UTF-8"?>
<features xlmns="http://karaf.apache.org/xmlns/features/v1.4.0"
	  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	  xsi:schemaLocation="http://karaf.apache.org/xmlns/features/v1.0.0" 
	  name="Apache-Shiro">
  <repository>mvn:org.apache.karaf.features/standard/${karaf.target.version}/xml/features</repository>
  <repository>mvn:org.apache.shiro/shiro-features/${project.version}/xml/features</repository>
  
  <feature name="Preset_Default" version="${project.version}">
      <feature>Default_SecurityManager</feature>
      <feature>Default_SessionManager</feature>
      <feature>Default_EventBus</feature>
      <feature>AuthStrategyOne</feature>
      <feature>MemorySessionDAO</feature>
      <feature>ConfigAdminRealm</feature>
  </feature>
  
  <feature name="Preset_Web" version="${project.version}">
      <feature>Web_SecurityManager</feature>
      <feature>ServletContainerSessionManager</feature>
      <feature>Default_EventBus</feature>
      <feature>AuthStrategyOne</feature>
      <feature>ConfigAdminRealm</feature>
  </feature>

  <feature name="Default_SecurityManager" version="${project.version}">
      <feature>scr</feature>
      <feature>shiro-core</feature>
      <bundle>mvn:${project.groupId}/shiro-osgi-defaultsecuritymanager/${project.version}</bundle>
      <bundle>mvn:${project.groupId}/shiro-osgi-delegatingsubjectfactory/${project.version}</bundle>
      <bundle>mvn:${project.groupId}/shiro-osgi-defaultsubjectdao/${project.version}</bundle>
      <bundle>mvn:${project.groupId}/shiro-osgi-defaultsessionstorageevaluator/${project.version}</bundle>
  </feature>

  <feature name="Default_SessionManager" version="${project.version}">
      <feature>scr</feature>
      <feature>shiro-core</feature>
      <bundle>mvn:${project.groupId}/shiro-osgi-sessionmanager/${project.version}</bundle>
      <bundle>mvn:${project.groupId}/shiro-osgi-sessionfactory/${project.version}</bundle>
  </feature>
  
  <feature name="Default_EventBus" version="${project.version}">
      <feature>scr</feature>
      <feature>shiro-core</feature>
      <bundle>mvn:${project.groupId}/shiro-osgi-eventbus/${project.version}</bundle>
  </feature>
  
  <feature name="AuthStrategyOne" version="${project.version}">
      <feature>scr</feature>
      <feature>shiro-core</feature>
      <bundle>mvn:${project.groupId}/shiro-osgi-authstrategyone/${project.version}</bundle>
  </feature>
  
  <feature name="MemorySessionDAO" version="${project.version}">
      <feature>scr</feature>
      <feature>shiro-core</feature>
      <bundle>mvn:${project.groupId}/shiro-osgi-sessiondao/${project.version}</bundle>
  </feature>
  
  <feature name="ConfigAdminRealm" version="${project.version}">
      <feature>scr</feature>
      <feature>shiro-core</feature>
      <bundle>mvn:${project.groupId}/shiro-osgi-configadminrealm/${project.version}</bundle>
  </feature>
      
  <feature name="Web_SecurityManager" version="${project.version}">
      <feature>scr</feature>
      <feature>shiro-core</feature>
      <feature>shiro-web</feature>
      <bundle>mvn:${project.groupId}/shiro-osgi-websecuritymanager/${project.version}</bundle>
      <bundle>mvn:${project.groupId}/shiro-osgi-defaultsubjectdao/${project.version}</bundle>
      <bundle>mvn:${project.groupId}/shiro-osgi-delegatingwebsubjectfactory/${project.version}</bundle>
      <bundle>mvn:${project.groupId}/shiro-osgi-defaultwebsessionstorageevaluator/${project.version}</bundle></features>
  </feature>
  
  <feature name="Cookie_RememberMeManager" version="${project.version}">
      <feature>scr</feature>
      <feature>shiro-core</feature>
      <bundle>mvn:${project.groupId}/shiro-osgi-cookieremembermemanager/${project.version}</bundle>
  </feature>

  <feature name="ServletContainerSessionManager" version="${project.version}">
      <feature>scr</feature>
      <feature>shiro-core</feature>
      <bundle>mvn:${project.groupId}/shiro-osgi-websessionmanager/${project.version}</bundle>
  </feature></feature>
  
  
  
</features>

